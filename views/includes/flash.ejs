<% if(success && success.length){  %>
    <div class="alert alert-success alert-dismissible mx-auto fade show col-6 offest-3 mt-4 mb-4" role="alert">
        <strong> <%= success %> </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>

<% }  %>

<% if(error && error.length){  %>
    <div class="alert alert-danger alert-dismissible mx-auto fade show col-6 offest-3 mt-4 mb-4" role="alert">
        <strong> <%= error %> </strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>

<% }  %>